add_filter("gform_next_button_2_17", "track_step_1", 10, 2);
function track_step_1($button, $form) {
    $dom = new DOMDocument();
    $dom->loadHTML($button);
    $input = $dom->getElementsByTagName('input')->item(0);
    if ($input->hasAttribute('onclick')) {
        $input->setAttribute("onclick="ga('send', 'event', 'Quote Form', 'Step 1');".$input->getAttribute("onclick"));
    } else {
        $input->setAttribute("onclick="ga('send', 'event', 'Quote Form', 'Step 1');");
    }
    return $dom->saveHtml();
}
