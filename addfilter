add_filter("gform_submit_button_2", "track_submit_btn", 10, 2);
function track_submit_btn($button, $form) {
    $dom = new DOMDocument();
    $dom->loadHTML($button);
    $input = $dom->getElementsByTagName('input')->item(0);
    if ($input->hasAttribute('onclick')) {
        $input->setAttribute("onclick="ga('send', 'event', 'Quote Form', 'Submit');".$input->getAttribute("onclick"));
    } else {
        $input->setAttribute("onclick="ga('send', 'event', 'Quote Form', 'Submit');");
    }
    return $dom->saveHtml();
}
